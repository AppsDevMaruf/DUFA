<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_margin="10dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="8dp"
        app:cardMaxElevation="10dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="false">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/userProfilePic"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:padding="5dp"
                android:layout_margin="4dp"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/view"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent"
                app:srcCompat="@drawable/maruf"
                app:strokeColor="@color/blue"
                app:strokeWidth="2dp" />

            <TextView
                android:id="@+id/profilePicAB"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="4dp"
                android:background="@drawable/cta_circle"
                android:fontFamily="@font/dm_sans_medium"
                android:gravity="center"
                android:includeFontPadding="false"
                android:padding="5dp"
                android:text="MA"
                android:textAllCaps="false"
                android:textAppearance="@style/TextAppearance.Material3.HeadlineSmall"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/view"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent"
                app:srcCompat="@drawable/maruf"
                app:strokeColor="@color/blue"
                app:strokeWidth="2dp"
                tools:ignore="MissingConstraints" />
            <View
                android:id="@+id/view"
                android:layout_width="1dp"
                android:layout_marginStart="100dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_height="100dp"/>


            <LinearLayout
                android:id="@+id/detailsLayout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/view"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="2dp"
                    android:maxLines="1"
                    android:textColor="@color/blue"
                    android:textSize="18sp"
                    app:fontFamily="@font/dm_sans"
                    tools:text="Maruf Alam" />

                <TextView
                    android:id="@+id/phoneNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="2dp"
                    android:maxLines="1"
                    android:textColor="@color/blue"
                    android:textSize="15sp"
                    app:fontFamily="@font/dm_sans"
                    tools:text="+8801687422428" />

                <TextView
                    android:id="@+id/blood_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_toEndOf="@+id/userProfilePic"
                    android:maxLines="1"
                    android:textColor="@color/red_700"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:fontFamily="@font/dm_sans"
                    tools:text="A+" />

                <TextView
                    android:id="@+id/department"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:maxLines="1"
                    android:textColor="@color/blue"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    app:fontFamily="@font/dm_sans"
                    tools:text="A+" />


                <TextView
                    android:id="@+id/district"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:textColor="@color/red_700"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:fontFamily="@font/dm_sans"
                    tools:text="A+" />

            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>
</layout>