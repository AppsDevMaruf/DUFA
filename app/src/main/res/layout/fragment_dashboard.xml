<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.DashboardFragment">

        <com.github.ybq.android.spinkit.SpinKitView
            android:id="@+id/progressBar"
            style="@style/SpinKitView.Circle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="16dp"
            android:indeterminate="true"
            android:visibility="gone"
            app:SpinKit_Color="@color/blue"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/mainLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="190dp"
                        android:layout_height="120dp"
                        android:layout_gravity="center"
                        android:layout_marginVertical="16dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/dufa_logo" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="8dp"
                        android:weightSum="2"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/imageView">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/memberListCard"
                            android:layout_width="166dp"
                            android:layout_height="match_parent"
                            android:layout_margin="8dp"
                            android:layout_weight="1"
                            android:padding="@dimen/_8sdp"
                            app:cardBackgroundColor="@color/white"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="5dp"
                            app:cardMaxElevation="12dp"
                            app:cardPreventCornerOverlap="true"
                            app:cardUseCompatPadding="false">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginVertical="8dp"
                                android:layout_marginStart="24dp"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/userImg"
                                    android:layout_width="match_parent"
                                    android:layout_height="60dp"
                                    android:scaleType="fitStart"
                                    android:src="@drawable/user_bg_remove"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    tools:ignore="RtlSymmetry" />

                                <TextView
                                    android:id="@+id/totalMember"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:includeFontPadding="false"
                                    android:letterSpacing="-0.02"
                                    android:lineSpacingExtra="1sp"
                                    android:text="1650"
                                    android:textColor="@color/text_black"
                                    android:textSize="28sp"
                                    android:textStyle="bold"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/userImg" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/dm_sans_medium"
                                    android:includeFontPadding="false"
                                    android:letterSpacing="0.02"
                                    android:lineSpacingExtra="1sp"
                                    android:paddingBottom="5dp"
                                    android:text="Members"
                                    android:textColor="@color/text_gray"
                                    android:textSize="14sp"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="@id/totalMember"
                                    app:layout_constraintTop_toBottomOf="@id/totalMember" />

                            </androidx.constraintlayout.widget.ConstraintLayout>


                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/mapCard"
                            android:layout_width="166dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:layout_weight="1"
                            android:padding="@dimen/_8sdp"
                            app:cardBackgroundColor="@color/white"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="5dp"
                            app:cardMaxElevation="12dp"
                            app:cardPreventCornerOverlap="true"
                            app:cardUseCompatPadding="false">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginVertical="8dp"
                                android:layout_marginStart="24dp"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/locationImg"
                                    android:layout_width="wrap_content"
                                    android:layout_height="60dp"
                                    android:layout_marginStart="-10dp"
                                    android:scaleType="fitStart"
                                    android:src="@drawable/locations"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:tint="@color/blue" />

                                <TextView
                                    android:id="@+id/nearUser"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:includeFontPadding="false"
                                    android:letterSpacing="-0.02"
                                    android:lineSpacingExtra="1sp"
                                    android:text="@string/infinity"
                                    android:textColor="@color/text_black"
                                    android:textSize="28sp"
                                    android:textStyle="bold"
                                    app:layout_constraintStart_toStartOf="@id/locationImg"
                                    app:layout_constraintTop_toBottomOf="@id/locationImg" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/dm_sans_medium"
                                    android:includeFontPadding="false"
                                    android:letterSpacing="0.02"
                                    android:lineSpacingExtra="1sp"
                                    android:paddingBottom="5dp"
                                    android:text="@string/dufians_nearby"
                                    android:textColor="@color/text_gray"
                                    android:textSize="14sp"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="@id/nearUser"
                                    app:layout_constraintTop_toBottomOf="@id/nearUser" />

                            </androidx.constraintlayout.widget.ConstraintLayout>


                        </androidx.cardview.widget.CardView>


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="8dp"
                        android:weightSum="2">


                        <androidx.cardview.widget.CardView
                            android:id="@+id/paymentCard"
                            android:layout_width="166dp"
                            android:layout_height="match_parent"
                            android:layout_margin="8dp"
                            android:layout_weight="1"
                            android:padding="@dimen/_8sdp"
                            app:cardBackgroundColor="@color/white"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="5dp"
                            app:cardMaxElevation="12dp"
                            app:cardPreventCornerOverlap="true"
                            app:cardUseCompatPadding="false">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginVertical="8dp"
                                android:layout_marginStart="24dp"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/dueImg"
                                    android:layout_width="match_parent"
                                    android:layout_height="60dp"
                                    android:scaleType="fitStart"
                                    android:src="@drawable/ic_pay"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <TextView
                                    android:id="@+id/totalDues"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:includeFontPadding="false"
                                    android:letterSpacing="-0.02"
                                    android:lineSpacingExtra="1sp"
                                    android:text="@string/infinity"
                                    android:textColor="@color/text_black"
                                    android:textSize="28sp"
                                    android:textStyle="bold"
                                    app:layout_constraintStart_toStartOf="@id/dueImg"
                                    app:layout_constraintTop_toBottomOf="@id/dueImg" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/dm_sans_medium"
                                    android:letterSpacing="0.02"
                                    android:lineSpacingExtra="1sp"
                                    android:paddingBottom="5dp"
                                    android:text="Total Dues"
                                    android:textColor="@color/text_gray"
                                    android:textSize="14sp"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="@+id/totalDues"
                                    app:layout_constraintTop_toBottomOf="@+id/totalDues" />

                            </androidx.constraintlayout.widget.ConstraintLayout>


                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/fundCollectionCard"
                            android:layout_width="166dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:layout_weight="1"
                            android:padding="@dimen/_8sdp"
                            android:visibility="visible"
                            app:cardBackgroundColor="@color/white"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="5dp"
                            app:cardMaxElevation="12dp"
                            app:cardPreventCornerOverlap="true"
                            app:cardUseCompatPadding="false">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginVertical="8dp"
                                android:layout_marginStart="24dp"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/fundImg"
                                    android:layout_width="match_parent"
                                    android:layout_height="60dp"
                                    android:scaleType="fitStart"
                                    android:src="@drawable/ic_amount"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <TextView
                                    android:id="@+id/fundAmount"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:includeFontPadding="false"
                                    android:letterSpacing="-0.02"
                                    android:lineSpacingExtra="1sp"
                                    android:text="@string/infinity"
                                    android:textColor="@color/text_black"
                                    android:textSize="28sp"
                                    android:textStyle="bold"
                                    app:layout_constraintStart_toStartOf="@id/fundImg"
                                    app:layout_constraintTop_toBottomOf="@id/fundImg" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/dm_sans_medium"
                                    android:includeFontPadding="false"
                                    android:letterSpacing="0.02"
                                    android:lineSpacingExtra="1sp"
                                    android:paddingBottom="5dp"
                                    android:text="@string/fund_collection"
                                    android:textColor="@color/text_gray"
                                    android:textSize="14sp"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="@id/fundAmount"
                                    app:layout_constraintTop_toBottomOf="@id/fundAmount" />

                            </androidx.constraintlayout.widget.ConstraintLayout>


                        </androidx.cardview.widget.CardView>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="8dp"
                        android:weightSum="2">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/voucher"
                            android:layout_width="166dp"
                            android:layout_height="match_parent"
                            android:layout_margin="8dp"
                            android:layout_weight="1"
                            android:padding="@dimen/_8sdp"
                            app:cardBackgroundColor="@color/white"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="5dp"
                            app:cardMaxElevation="12dp"
                            app:cardPreventCornerOverlap="true"
                            app:cardUseCompatPadding="false">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginVertical="8dp"
                                android:layout_marginStart="24dp"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/voucherCardImg"
                                    android:layout_width="match_parent"
                                    android:layout_height="60dp"
                                    android:paddingVertical="8dp"
                                    android:scaleType="fitStart"
                                    android:src="@drawable/ic_voucher"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <TextView
                                    android:id="@+id/totalVouchers"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:includeFontPadding="false"
                                    android:letterSpacing="-0.02"
                                    android:lineSpacingExtra="1sp"
                                    android:text="@string/infinity"
                                    android:textColor="@color/text_black"
                                    android:textSize="28sp"
                                    android:textStyle="bold"
                                    app:layout_constraintStart_toStartOf="@id/voucherCardImg"
                                    app:layout_constraintTop_toBottomOf="@id/voucherCardImg" />

                                <TextView

                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/dm_sans_medium"
                                    android:includeFontPadding="false"
                                    android:letterSpacing="0.02"
                                    android:lineSpacingExtra="1sp"
                                    android:paddingBottom="5dp"
                                    android:text="@string/voucher"
                                    android:textColor="@color/text_gray"
                                    android:textSize="14sp"
                                    app:layout_constraintStart_toStartOf="@id/totalVouchers"
                                    app:layout_constraintTop_toBottomOf="@id/totalVouchers" />

                            </androidx.constraintlayout.widget.ConstraintLayout>


                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/userQr"
                            android:layout_width="166dp"
                            android:layout_height="match_parent"
                            android:layout_margin="8dp"
                            android:layout_weight="1"
                            android:padding="@dimen/_8sdp"
                            app:cardBackgroundColor="@color/white"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="5dp"
                            app:cardMaxElevation="12dp"
                            app:cardPreventCornerOverlap="true"
                            app:cardUseCompatPadding="false">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginVertical="8dp"
                                android:layout_marginStart="24dp"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/qrImg"
                                    android:layout_width="match_parent"
                                    android:layout_height="60dp"
                                    android:paddingVertical="4dp"
                                    android:scaleType="fitStart"
                                    android:src="@drawable/ic_qr"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <TextView
                                    android:id="@+id/qrAmount"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:includeFontPadding="false"
                                    android:letterSpacing="-0.02"
                                    android:lineSpacingExtra="1sp"
                                    android:text="@string/infinity"
                                    android:textColor="@color/text_black"
                                    android:textSize="28sp"
                                    android:textStyle="bold"
                                    app:layout_constraintStart_toStartOf="@id/qrImg"
                                    app:layout_constraintTop_toBottomOf="@id/qrImg"
                                    tools:layout_editor_absoluteX="16dp" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="12dp"
                                    android:fontFamily="@font/dm_sans_medium"
                                    android:includeFontPadding="false"
                                    android:letterSpacing="0.02"
                                    android:lineSpacingExtra="1sp"
                                    android:paddingBottom="5dp"
                                    android:text="@string/qr"
                                    android:textColor="@color/text_gray"
                                    android:textSize="14sp"
                                    app:layout_constraintStart_toStartOf="@id/qrAmount"
                                    app:layout_constraintTop_toBottomOf="@+id/qrAmount" />
                            </androidx.constraintlayout.widget.ConstraintLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>