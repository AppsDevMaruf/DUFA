<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/cancel_buttonSheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:src="@drawable/handler" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Select Filter Type" />

    <LinearLayout
        android:id="@+id/nameOrEmailBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="8dp"
        android:layout_marginTop="50dp"
        android:tag="Name or Email"
        android:background="@drawable/stroke_boarder"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/allTimeImg"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="@string/app_name"
            android:padding="8dp"
            android:src="@drawable/ic_filter"
            app:tint="@color/blue" />

        <TextView
            android:id="@+id/allTimeText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="0dp"
            android:includeFontPadding="false"
            android:paddingStart="10dp"
            android:tag="SAVINGS"
            android:text="Name or Email"
            android:textColor="@color/text_black"
            android:textSize="20sp"
            tools:ignore="RtlSymmetry" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/bloodGroupBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="8dp"
        android:tag="Blood Group"
        android:background="@drawable/stroke_boarder"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="@string/app_name"
            android:padding="8dp"
            android:src="@drawable/ic_filter"
            app:tint="@color/blue" />

        <TextView
            android:id="@+id/todayText"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="0dp"
            android:includeFontPadding="false"
            android:paddingStart="10dp"
            android:tag="CHECKING"
            android:text="Blood Group"
            android:textColor="@color/text_black"
            android:textSize="20sp"
            tools:ignore="RtlSymmetry" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/districtBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="8dp"
        android:tag="District"
        android:background="@drawable/stroke_boarder"
        android:orientation="horizontal">

        <ImageView

            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="@string/app_name"
            android:padding="8dp"
            android:src="@drawable/ic_filter"
            app:tint="@color/blue" />

        <TextView
            android:id="@+id/yesterdayText"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="0dp"
            android:includeFontPadding="false"
            android:paddingStart="10dp"
            android:tag="CHECKING"
            android:text="District"
            android:textColor="@color/text_black"
            android:textSize="20sp"
            tools:ignore="RtlSymmetry" />


    </LinearLayout>

    <LinearLayout
        android:tag="occupation"
        android:id="@+id/occupationBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="8dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/stroke_boarder"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="@string/app_name"
            android:padding="8dp"
            android:src="@drawable/ic_filter"
            app:tint="@color/blue" />

        <TextView
            android:id="@+id/last7daysText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="0dp"
            android:includeFontPadding="false"
            android:paddingStart="10dp"
            android:tag="SAVINGS"
            android:text="Occupation"
            android:textColor="@color/text_black"
            android:textSize="20sp"
            tools:ignore="RtlSymmetry" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/departmentBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="8dp"
        android:tag="Department"
        android:background="@drawable/stroke_boarder"
        android:orientation="horizontal">

        <ImageView

            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="@string/app_name"
            android:padding="8dp"
            android:src="@drawable/ic_filter"
            app:tint="@color/blue" />

        <TextView
            android:id="@+id/last30daysText"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="0dp"
            android:includeFontPadding="false"
            android:paddingStart="10dp"
            android:tag="CHECKING"
            android:text="Department"
            android:textColor="@color/text_black"
            android:textSize="20sp"
            tools:ignore="RtlSymmetry" />


    </LinearLayout>
    <LinearLayout
        android:id="@+id/dobBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="8dp"
        android:tag="Date of Birth"
        android:background="@drawable/stroke_boarder"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="@string/app_name"
            android:padding="8dp"
            android:src="@drawable/ic_filter"
            app:tint="@color/blue" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="0dp"
            android:includeFontPadding="false"
            android:paddingStart="10dp"
            android:tag="CHECKING"
            android:text="Date of Birth"
            android:textColor="@color/text_black"
            android:textSize="20sp"
            tools:ignore="RtlSymmetry" />


    </LinearLayout>


</LinearLayout>